<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="evaluation_stage_list_action">
            <field name="name">Stage</field>
            <field name="res_model">veterinary.evaluation.stages</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="evaluation_stage_tree_view">
            <field name="name">evaluation.stage.tree</field>
            <field name="model">veterinary.evaluation.stages</field>
            <field name="arch" type="xml">
                <tree string="Stage Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="evaluation_stage_form_view">
            <field name="name">evaluation.stage.form</field>
            <field name="model">veterinary.evaluation.stages</field>
            <field name="arch" type="xml">
                <form string="Stage Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
